# Copy to .env and fill in values

# === Core Platform ===

# Database
MONGO_URI=mongodb://mongo:27017/real_estate_assistant

# Session & JWT
SESSION_SECRET=replace_me_with_secure_random_string
JWT_SECRET=replace_me_with_secure_random_string

# JWT Secret for auth
# GOOGLE AUTH CONFIGURATION
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4004/api/auth/google/callback

# === AI PROVIDERS ===
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GEMINI_API_KEY=your_gemini_api_key_here

# === OBJECT STORAGE (Akamai S3-Compatible) ===
S3_REGION=us-east-1
S3_ENDPOINT=https://your-account.s.akamaihd.net
S3_PUBLIC_ENDPOINT=https://your-public-endpoint.example.com
S3_ACCESS_KEY=your_akamai_access_key
S3_SECRET_KEY=your_akamai_secret_key
S3_BUCKET=your_bucket_name

# Optional: override default folder prefix for per-user data
ARTIFACT_ROOT_PREFIX=user
SERVE_LEGACY_FRONTEND=false

# === Automations / n8n ===
N8N_SERVER=https://n8n.example.com
N8N_USER=realestate
N8N_KEY=your_n8n_api_key
N8N_LEAD_WORKFLOW=/webhook/lead-created
N8N_LISTING_WORKFLOW=/webhook/listing-created

# For local Minio testing (comment out for production)
# S3_ENDPOINT=http://minio:9000
# S3_PUBLIC_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=real-estate-assistant
